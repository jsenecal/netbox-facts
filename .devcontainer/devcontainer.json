{
	"name": "NetBox Facts Plugin Development",
	"dockerComposeFile": [
		"docker-compose.yml"
	],
	"service": "netbox",
	"workspaceFolder": "/opt/netbox-facts",
	"overrideCommand": false,
	"customizations": {
		"vscode": {
			"settings": {
				"editor.experimental.stickyScroll.enabled": true,
				"isort.args": [
					"--profile=black"
				],
				"python.analysis.typeCheckingMode": "basic",
				"python.analysis.extraPaths": [
					"/opt/netbox/netbox"
				],
				"python.autoComplete.extraPaths": [
					"/opt/netbox/netbox"
				],
				"python.defaultInterpreterPath": "/opt/netbox/venv/bin/python3",
				"python.formatting.autopep8Path": "/opt/netbox/venv/bin/autopep8",
				"python.formatting.blackPath": "/opt/netbox/venv/bin/black",
				"python.formatting.provider": "black",
				"python.formatting.yapfPath": "/opt/netbox/venv/bin/yapf",
				"python.pythonPath": "/opt/netbox/venv/bin/python3",
				"python.terminal.activateEnvironment": true,
				"python.venvPath": "/opt/netbox/",
				"python.linting.enabled": true,
				"python.linting.pylintArgs": [
					"--load-plugins",
					"pylint_django",
					"--django-settings-module=netbox.settings"
				],
				"files.exclude": {
					"**/node_modules": true,
					"build": true,
					"dist": true,
					"*egg*": true
				},
				"dev.containers.copyGitConfig": true
			},
			"extensions": [
				"DavidAnson.vscode-markdownlint",
				"GitHub.codespaces",
				"GitHub.copilot",
				"GitHub.copilot-labs",
				"GitHub.vscode-pull-request-github",
				"Gruntfuggly.todo-tree",
				"Tyriar.sort-lines",
				"aaron-bond.better-comments",
				"alefragnani.bookmarks",
				"batisteo.vscode-django",
				"charliermarsh.ruff",
				"codezombiech.gitignore",
				"esbenp.prettier-vscode",
				"exiasr.hadolint",
				"formulahendry.auto-rename-tag",
				"mintlify.document",
				"ms-azuretools.vscode-docker",
				"ms-python.black-formatter",
				"ms-python.isort",
				"ms-python.pylint",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-vscode.makefile-tools",
				"ms-python.debugpy",
				"monosans.djlint",
				"mutantdino.resourcemonitor",
				"oderwat.indent-rainbow",
				"paulomenezes.duplicated-code",
				"redhat.vscode-yaml",
				"samuelcolvin.jinjahtml",
				"searKing.preview-vscode",
				"wholroyd.jinja",
				"yzhang.markdown-all-in-one"
			]
		}
	},
	"remoteUser": "ubuntu"
}
